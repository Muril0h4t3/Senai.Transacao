@{
    Layout = "MasterPageDeslogado";
}


<h1>Login</h1>

@ViewBag.Mensagem 

<form action="/Usuario/Login" method="POST">
    <label>
        Email
        <input type="text" name="email" required="true">
    </label>

    <label>
        Senha
        <input type="password" name="senha" required="true">
    </label>

    <input type="submit" value="Entrar">
</form>